{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<center>
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <br>
        <table  border="1" bordercolor="#0033FF">
            <tr>
                <td align="center" width="350" height="300" bgcolor="#C6D1DE"><img src="{{ asset('bundles/lfsmdonateur/images/bonjour.jpg') }}" border="0"></td> 
            </tr>
            <tr>
                <td align="center" width="350" bgcolor="#FFFFFF">
                    <img src="{{ asset('bundles/lfsmdonateur/images/index_lfsm.png') }}" border="0"><br><div align="right"><font size="-2">Version 2.0.0</font></div>

                </td> 
            </tr>
            <tr>
                <td align="justify" width="350" bgcolor="#FFFFFF" class="titacc">
                    <table width="100%" border="0">
                        <tr>
                            <td width="50%" align="center"><label for="username">{{ 'security.login.username'|trans }}</label></td>
                            <td width="50%" align="left"><input class="text-input" type="text" id="username" name="_username" value="{{ last_username }}" required="required" /></td>
                        </tr>
                        <tr>
                            <td width="50%" align="center"><label for="password">{{ 'security.login.password'|trans }}</label></td>
                            <td align="left"><input class="text-input" type="password" id="password" name="_password" required="required" /></td>
                        </tr>      
                    </table>
                </td> 
            </tr>
        </table>
        <input class="button" type="submit" id="_submit" name="_submit" value="" />
        <div class="notification information png_bg">
                {% if error %}
                    <div>
                        {{ error|trans }}
                    </div>
                {% endif %}
        </div>
    </form>
</center>
{% endblock fos_user_content %}
