{% extends '::base.html.twig' %}

{% block body %}
<div class="container">
    <h3>Gestion des civilités</h3>
    
    <div class="col-tableau">
        <div class="new_item_admin">
            <a href="{{ path('civilite_new') }}">
                <img src="{{ asset('bundles/lfsmdonateur/images/new_item.png') }}" border="0" onmouseover="montre('Nouveau');" onmouseout="cache();">
            </a>
        </div>
        <div class="pagination_navigation">
            <div class="pagination_custom">
                <p>Page {{pagination.getCurrentPageNumber}}/{{totalPages}} ({{pagination.getTotalItemCount}} entrées)</p>
            </div>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
        <table width="100%">
            <tbody>
                <tr>
                    <th width="15%">{{ knp_pagination_sortable(pagination, 'Libelle court', 'q.civ_lib_court') }}</th>
                    <th width="15%">{{ knp_pagination_sortable(pagination, 'Libellé', 'q.civ_lib') }}</th>
                </tr>
                {% for entity in pagination %}
                <tr class="fdblanc">
                    <td><a href="{{ path('civilite_edit', { 'id': entity.id }) }}">{{ entity.civlibcourt }}</a></td>
                    <td><a href="{{ path('civilite_edit', { 'id': entity.id }) }}">{{ entity.civlib }}</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>    
    </div>
    <div class="clear"></div>
</div>
{% endblock %}