{% extends '::base.html.twig' %}

{% block body %}
<div class="container">
    <h3>Gestion des actions à mener</h3>
    
    <div class="col-tableau">
        <div class="new_item_admin">
            <a href="{{ path('action_new') }}">
                <img src="{{ asset('bundles/lfsmdonateur/images/new_item.png') }}" border="0" onmouseover="montre('Nouveau');" onmouseout="cache();">
            </a>
        </div>
        <div class="pagination_navigation">
            <div class="pagination_custom">
                <p>Page {{pagination.getCurrentPageNumber}}/{{totalPages}} ({{pagination.getTotalItemCount}} entrées)</p>
            </div>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
        <table width="100%">
            <tbody>
                <tr>
                    <th width="15%">{{ knp_pagination_sortable(pagination, 'Code', 'q.act_code') }}</th>
                    <th width="15%">{{ knp_pagination_sortable(pagination, 'Theme', 't.code_lib') }}</th>
                    <th width="15%">{{ knp_pagination_sortable(pagination, 'Libellé', 'q.act_lib') }}</th>
                    <th width="15%">Action</th>
                </tr>
                {% for entity in pagination %}
                <tr class="fdblanc">
                    <td>{{ entity.actcode }}</td>
                    <td>{{ entity.theme }}</td>
                    <td>{{ entity.actlib }}</td>
                    <td><a class="modif" href="{{ path('action_edit', { 'id': entity.id }) }}">Modifier</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>    
    </div>
    <div class="clear"></div>
</div>
{% endblock %}
