{% extends '::base.html.twig' %}

{% block body %}
<div class="container">
    <h3 class="new_item_h3">Nouvelle action</h3>

    <div class="background_new_item">

        <form action="{{ path('action_create') }}" method="post" {{ form_enctype(form) }}>
            <div class="col_form_new_edit">
                <table>
                    <tr>
                       <td>{{ form_label(form.act_code, 'Code') }}</td>
                       <td>{{ form_widget(form.act_code) }}</td>        
                    </tr>

                    <tr>
                        <td>{{ form_label(form.theme, 'Theme') }}</td>
                        <td>{{ form_widget(form.theme) }}</td>        
                    </tr>

                    <tr>
                        <td>{{ form_label(form.act_lib, 'Libell√©') }}</td>
                        <td>{{ form_widget(form.act_lib) }}</td>        
                    </tr>
                </table>
            </div>
                {{ form_rest(form) }}
                {{ form_errors(form) }}    

            <div class="buttons_action">
                <button type="submit" class="save">&nbsp;</button>
            </div>
        </form>
    </div>
    <div class="clear"></div>
</div>
{% endblock %}