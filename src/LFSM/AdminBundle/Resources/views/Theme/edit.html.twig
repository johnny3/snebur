{% extends '::base.html.twig' %}

{% block body %}
<div class="container">
    <h3 class="new_item_h3">Mise à jour du thème de l'action à mener</h3>

    <div class="background_new_item">

        <form action="{{ path('theme_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            <div class="col_form_new_edit">
                <table>
                    <tr>
                       <td>{{ form_label(edit_form.code_lib, 'Code') }}</td>
                       <td>{{ form_widget(edit_form.code_lib) }}</td>        
                    </tr>

                    <tr>
                        <td>{{ form_label(edit_form.the_lib, 'Libellé') }}</td>
                        <td>{{ form_widget(edit_form.the_lib) }}</td>        
                    </tr>
                </table>
            </div>
                {{ form_rest(edit_form) }}
                {{ form_errors(edit_form) }}    

            <div class="buttons_action">
                <button type="submit" class="save">&nbsp;</button>
                <a href="{{ path('theme_delete', { 'id': entity.id }) }}" class="delete_link"><img src="{{ asset('bundles/lfsmdonateur/images/Delete.gif') }}"></a>
            </div>
        </form>
        
    </div>
    <div class="clear"></div>
</div>
{% endblock %}
