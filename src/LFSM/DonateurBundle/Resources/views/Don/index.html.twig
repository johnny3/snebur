<h1>Don list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Datedon</th>
            <th>Montant</th>
            <th>Dateremisedon</th>
            <th>Numcheque</th>
            <th>Banque</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('don_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.dateDon %}{{ entity.dateDon|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.montant }}</td>
            <td>{% if entity.dateRemiseDon %}{{ entity.dateRemiseDon|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.numCheque }}</td>
            <td>{{ entity.banque }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('don_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('don_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('don_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
