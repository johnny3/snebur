<h1>Don</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Datedon</th>
            <td>{{ entity.dateDon|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Montant</th>
            <td>{{ entity.montant }}</td>
        </tr>
        <tr>
            <th>Dateremisedon</th>
            <td>{{ entity.dateRemiseDon|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Numcheque</th>
            <td>{{ entity.numCheque }}</td>
        </tr>
        <tr>
            <th>Banque</th>
            <td>{{ entity.banque }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('don') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('don_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('don_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
